{
  "name": "execdock",
  "version": "1.0.0",
  "description": "ExecDock - Terminal Docking Application",
  "scripts": {
    "postinstall": "cd client && pnpm install && cd ../server && pnpm install",
    "dev": "concurrently \"pnpm run server:dev\" \"pnpm run client:dev\"",
    "server:dev": "cd server && pnpm run dev",
    "client:dev": "cd client && pnpm dev",
    "build": "cd server && pnpm run build && cd ../client && pnpm build",
    "start": "cd server && pnpm start"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "engines": {
    "node": "20.19.0"
  }
}
